  "main": "lib/index.js",
  "scripts": {
    "build": "yarn gulp default",
    "gulp": "node -r esm ./node_modules/.bin/gulp",
    "jest": "node -r esm ./node_modules/.bin/jest",
    "lint": "eslint --ext .js,.ts,.tsx *.js src --color",
    "lint:watch": "yarn lint --watch",
    "postinstall:1": "yarn js-common-editorconfig-clone && yarn js-common-debug-clone",
    "postinstall:2": "yarn js-common-eslint-config-react-mono-clone && js-common-babel-config-clone",
    "postinstall:3": "yarn js-common-prettierrc-clone && yarn js-common-eslint-config-mono-clone",
    "prepare": "yarn postinstall:1 && yarn postinstall:2 && yarn postinstall:3 && yarn sort-package-json",
    "prepublish": "yarn build",
    "test": "yarn jest",
    "test:ci": "yarn lint && yarn test"
  },
  "devDependencies": {
    "@types/react": "^16.8.19",
    "@znemz/js-common-babel-config": "^0.0.22",
    "@znemz/js-common-babel-config-clone": "^0.0.22",
    "@znemz/js-common-debug-clone": "^0.0.22",
    "@znemz/js-common-editorconfig-clone": "^0.0.22",
    "@znemz/js-common-eslint-config-mono-clone": "^0.0.22",
    "@znemz/js-common-eslint-config-react-mono-clone": "^0.0.22",
    "@znemz/js-common-gulp-monorepo-typescript": "^0.0.22",
    "@znemz/js-common-prettierrc-clone": "^0.0.22",
    "@znemz/react-extras-jest": "^1.0.0-alpha.3",
    "coveralls": "^3.0.4",
    "del": "^4.1.1",
    "esm": "^3.2.22",
    "prettier": "^1.18.2",
    "react": "^16.8",
    "sort-package-json": "^1.21.0",
    "typescript": "^3.5.1"
  }
}
